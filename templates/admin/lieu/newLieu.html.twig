{% extends 'base.html.twig' %}

{% block title %}Ajouter un/des lieux à
	{{moniteur.username}}
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('crudIndispo') }}{% endblock %}
{% block body %}
	<h1 class='d-flex justify-content-center'>Ajouter un/des lieux à
		{{moniteur.username}}</h1>
	<div class="container col-md-6">
		<div id='lieux'>
			<div id="1" class="d-flex justify-content-center">
				<span>#1</span>
				<div class="col-12">
					<label for="lieu1" class="col-2 col-form-label">Lieu</label>
					<input id="lieu1" required="required" class="form-control" type="text" placeholder="Entrez un lieu de rendez-vous">
				</div>
			</div>
		</div>
		<div class='d-flex justify-content-center'>
			<a id='btnPlus' class='btn btn-primary'>
				<i class="fas fa-plus"></i>
			</a>
			<a id='btnMoins' class='btn btn-danger'>
				<i class="fas fa-minus"></i>
			</a>
		</div>
		<button id='btnAddLieu' class='btn btn-success' data-container="body" data-toggle="errorLieu" data-placement="bottom" data-trigger="focus" data-content="Un champ est vide.">Ajouter</button>


	</div>
{% endblock %}
{% block javascripts %}
	<div data-moniteur='{{ moniteur.id}}'></div>
	{{ encore_entry_script_tags('crudLieu') }}

{% endblock %}
