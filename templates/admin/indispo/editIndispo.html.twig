{% extends 'base.html.twig' %}

{% block title %}Modification Indisponibilité
{% endblock %}

{% block stylesheets %}
		{{ encore_entry_link_tags('crudIndispoStyle') }}

{% endblock %}
{% block body %}
	<h1 class='d-flex justify-content-center'>Modifier une indisponibilité</h1>

	<div class="container col-md-6">
		{{form_start(form)}}
		<div class=" d-flex justify-content-center ">
			<div class="col-6">
				{{form_row(form.start)}}
			</div>
			<div class="col-6">
				{{form_row(form.end)}}
			</div>
		</div>
		<div class='d-flex justify-content-center'>
			<button id='btnIndispo' class='btn btn-success' data-container="body" data-toggle="errorDate" data-placement="bottom" data-trigger="focus" data-content="La date de fin est égale ou antérieure à la date de début.">Modifier</button>
		</div>
		{{form_end(form)}}

	</div>

{% endblock %}
{% block javascripts %}
	{{ encore_entry_script_tags('crud') }}
{% endblock %}
