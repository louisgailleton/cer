{% extends 'base.html.twig' %}

{% block title %}Modification gérant
{% endblock %}

{% block stylesheets %}{% endblock %}
{% block body %}
	<h1 class='d-flex justify-content-center'>Modifier un gérant</h1>
	<div class="container">
		{{ form_start(form) }}
		{{ form_row(form.nom) }}
		{{ form_row(form.prenom) }}
		{{ form_row(form.mail) }}
		{{ form_row(form.telephone) }}
		<button class='btn btn-success'>Modifier</button>
		{{ form_end(form) }}

		<a href="{{ path('gerant.editMdp', { 'id': gerant.id }) }}" class='btn btn-warning mt-2'>Changer le mot de passe</a>

	</div>
{% endblock %}
{% block javascripts %}
	{{ encore_entry_script_tags('crud') }}
{% endblock %}
