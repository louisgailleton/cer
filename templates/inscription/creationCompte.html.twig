{% extends 'base.html.twig' %}

{% block title "Inscription" %}

{% block stylesheets %}
    {{ encore_entry_link_tags('creaCompte') }}
{% endblock %}

{% block body %}

    <div class="container pt-4">
        <div class="row pb-4">
            <div class="col-12 text-center">
                <h1>Je cr√©e mon compte</h1>
            </div>
        </div>
        {{ form_start(form) }}
            <div class="row pt-4">
                <div class="offset-lg-2 offset-md-2 col-lg-4 col-md-4 col-sm-12">
                    {{ form_row(form.prenom) }}
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    {{ form_row(form.nom) }}
                </div>
            </div>
            <div class="row">
                <div class="offset-lg-2 offset-md-2 col-lg-4 col-md-4 col-sm-12">
                    {{ form_row(form.mail) }}
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    {{ form_row(form.telephone) }}
                </div>
            </div>
            <div class="row pb-4">
                <div class="offset-lg-2 offset-md-2 col-lg-4 col-md-4 col-sm-12">
                    {{ form_row(form.mdp.first) }}
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    {{ form_row(form.mdp.second) }}
                    {{ form_rest(form) }}
                </div>
            </div>
            <div class="row pt-4 pb-4">
                <div class="col-12 text-center">
                    <button class="btn btn-success" id="btn_inscription">{{ button|default("S'inscrire") }}</button>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

