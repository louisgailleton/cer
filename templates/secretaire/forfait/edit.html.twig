{% extends 'base.html.twig' %}

{% block title %}Forfait{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('forfait') }}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Modifier le forfait</h1>

        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.libelleforfait) }}
                {{ form_row(form.prix) }}
                {{ form_row(form.contenuForfait) }}
            </div>
        </div>
        {{ form_rest(form) }}
        <button class="btn btn-success">Valider</button>
        <a href="{{ path('secretaire.forfait') }}" class="btn btn-warning">Retour</a>
        {{ form_end(form) }}
    </div>
{% endblock %}
