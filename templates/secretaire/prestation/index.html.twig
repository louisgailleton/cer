{% extends 'base.html.twig' %}

{% block title %}Prestation{% endblock %}

{% block body %}
    <div class="container">
        <h1>Prestation</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Detail</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for prestation in prestations %}
                <tr>
                    <td>{{ prestation.id }}</td>
                    <td>{{ prestation.nom }}</td>
                    <td>{{ prestation.prix }}</td>
                    <td>{{ prestation.detail }}</td>
                    <td><a href="{{ path('secretaire.modifPrestation', {'id': prestation.id}) }}" class="btn btn-warning">Modifier</a></td>
                    <td>{{ include('secretaire/prestation/_delete_form.html.twig') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune prestations trouv√©es</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('secretaire.ajoutPrestation') }}" class="btn btn-primary">Ajouter une prestation</a>
    </div>
{% endblock %}
