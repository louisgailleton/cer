{% extends 'base.html.twig' %}

{% block title "Modification du mot de passe" %}

{% block body %}

    <div class="container">
        <h1>Modification du mot de passe</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.mdp) }}
                {{ form_row(form.nouveauMdp.first) }}
                {{ form_row(form.nouveauMdp.second) }}
            </div>
        </div>
        {{ form_rest(form) }}
        <button class="btn btn-success">{{ button|default("Modifier") }}</button>
        <a href="{{ path('eleve.donnees') }}" class="btn btn-primary">Retour</a>
        {{ form_end(form) }}
        {% if(message is defined) %}
            {{ message }}
        {% endif %}
    </div>

{% endblock %}