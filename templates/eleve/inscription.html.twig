{% extends 'base.html.twig' %}

{% block title "Inscription" %}

{% block body %}

    <div class="container">.
        <div class="row">
            <div class="col-12 text-center">
                <h1>Inscription</h1>
            </div>
        </div>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.prenom) }}
                {{ form_row(form.nom) }}
                {{ form_row(form.mail) }}
                {{ form_row(form.mdp.first) }}
                {{ form_row(form.mdp.second) }}
            </div>
        </div>
        {{ form_rest(form) }}
        <button class="btn btn-success">{{ button|default("S'inscrire") }}</button>
        {{ form_end(form) }}
    </div>

{% endblock %}

