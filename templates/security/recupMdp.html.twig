{% extends 'base.html.twig' %}

{% block title "Récupération du mot de passe" %}

{% block body %}

    <div class="container">
        <h1>Récupération du mot de passe</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.mail) }}
            </div>
        </div>
        {{ form_rest(form) }}
        <button class="btn btn-success">{{ button|default("Valider") }}</button>
        <a href="{{ path('login') }}" class="btn btn-warning">Retour</a>
        {{ form_end(form) }}
        {% if(message is defined) %}
            {{ message }}
        {% endif %}
    </div>

{% endblock %}

